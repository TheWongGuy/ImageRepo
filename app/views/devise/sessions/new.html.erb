<br>
<div class="task-container columns is-multiline">
  <div class="card column is-half is-offset-one-quarter">
    <div class="card-content">
      <h2 class="title is-1">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email , class: "label"%>
        <div class="control">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: "email@email.com"%>
        </div>
      </div>

      <div class="field">
        <%= f.label :password, class: "label" %>
        <div class="control">
          <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class: "checkbox" %>
        <%= f.label :remember_me, class: "checkbox"%>
      </div>
      <% end %>

      <% if flash.alert %>
       <div id=”error_explanation”>
        <ul>
         <li><%= flash.alert %></li>
        </ul>
       </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "button is-primary is-rounded"%>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>